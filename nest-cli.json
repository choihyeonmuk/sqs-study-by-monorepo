{
  "$schema": "https://json.schemastore.org/nest-cli",
  "monorepo": true,
  "sourceRoot": "apps",
  "projects": {
    "producer": {
      "type": "application",
      "root": "producer",
      "entryFile": "main",
      "sourceRoot": "producer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/producer/tsconfig.app.json"
      }
    },
    "consumer": {
      "type": "application",
      "root": "consumer",
      "entryFile": "main",
      "sourceRoot": "consumer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/consumer/tsconfig.app.json"
      }
    }
  }
}